ScreenManager:
    Screen:
        id: init
        name: "initializer"
        MDBoxLayout:
            md_bg_color: 1, 1, 1, 1
            orientation: "vertical"
            padding: dp(20)
            Image:
                allow_stretch: True
                keep_ratio: True
                source: "assets/N1d.PNG"

            Image:
                source: "assets/image/ecommerce.gif"
                anim_delay: .2

            Image:
                id: spinner
                source: "assets/spinner.gif"
                anim_delay: 0.04
                pos_hint: {'center_x': .5, 'center_y': .1}
    Screen:
        id: manager
        name: "manager"

