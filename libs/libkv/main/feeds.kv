<Feeds>:
    name: "feeds"
    RelativeLayout:
        id: non
        opacity: 0
        MDIcon:
            id: ico
            icon:"package-variant-closed"
            color: app.theme_cls.disabled_hint_text_color
            font_size: dp(70)
            pos_hint: {"center_x":.5, "center_y":.5}
            halign: "center"
        MDLabel:
            id: lbl
            text: "No Feeds"
            color: app.theme_cls.disabled_hint_text_color
            halign: "center"
            pos_hint: {"center_x":.5, "center_y":.4}
    MDBoxLayout:
        orientation:"vertical"
        md_bg_color: 1, 1, 1, 1
        NoLinerToolBar:
            id: toolbar
            title: "Feeds"
            icon_left: "magnify"
            icon_right: "cart-variant"
            icon_left_callback:
                lambda: exec(
                """
                root.root.manager.prev_screen.append(root.root.name);
                check_add_widget(app, "search_widget", root.root, "Factory.Search()", "search");
                root.root.manager.ids.search.p_type = False;
                root.root.manager.current = "search"
                """
                )
            icon_right_callback: root.go_cart
        RecycleView:
            id: rv
            effect_cls: ScrollEffect
            viewclass: "FeedsCard"
            on_scroll_start:
                root.schedule_load()
                [exec("child.disabled = True", {"child": child}) for child in holder.children]
            on_scroll_stop:
                [exec("child.disabled = False", {"child": child}) for child in holder.children]
            on_touch_up:
                [exec("child.disabled = False", {"child": child}) for child in holder.children]
            RecycleGridLayout:
                id: holder
                root: root
                default_size_hint: 1, None
                default_size: None, Window.height/3
                size_hint_y: None
                height: self.minimum_height
                spacing:dp(10)
                cols: 1
                padding: dp(5)
    MDRelativeLayout:
        id: progress_box
        adaptive_height: True
        pos_hint: {"center_y": .5}
        AKSpinnerDoubleBounce:
            id: progress
            spinner_size: dp(50)
            active: True
            pos_hint: {"center_x": .5}