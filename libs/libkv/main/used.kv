<Used>:
    name: "used"
    MDBoxLayout:
        orientation:"vertical"
        md_bg_color: 1, 1, 1, 1
        NoLinerToolBar:
            id: toolbar
            title: "Fairly Used"
            icon_left: "magnify"
            icon_right: "cart-variant"
            icon_right_callback: root.go_cart
            icon_left_callback:
                lambda: exec(
                """
                root.root.manager.prev_screen.append(root.root.name);
                check_add_widget(app, "search_widget", root.root, "Factory.Search()", "search");
                root.root.manager.ids.search.p_type = False;
                root.root.manager.current = "search";
                """
                )
        RecycleView:
            id: rv
            effect_cls: ScrollEffect
            viewclass: "SalesCard"
            scroll_distance: dp(3)
            on_scroll_y:
                if self.scroll_y == -0.0 and (root.image_loaded == root.len_rv_data) and root.data: root.snack.open()
            RecycleGridLayout:
                root: root
                default_size_hint: None, None
                default_size: root.width/2 - dp(10), Window.height/2.5
                size_hint_y: None
                height: self.minimum_height
                spacing:dp(15), dp(15)
                cols: 2
                padding: [dp(10), dp(10), dp(10), dp(100)]
                key_size: "_size"
    MDRelativeLayout:
        id: progress_box
        adaptive_height: True
        pos_hint: {"center_y": .5}
        AKSpinnerDoubleBounce:
            id: progress
            spinner_size: dp(50)
            active: True
            pos_hint: {"center_x": .5}

    RelativeLayout:
        id: non
        opacity: 0
        MDIcon:
            id: ico
            icon:"package-variant-closed"
            color: app.theme_cls.disabled_hint_text_color
            font_size: dp(70)
            pos_hint: {"center_x":.5, "center_y":.5}
            halign: "center"
        MDLabel:
            id: lbl
            text: "Fairly Used Products Unavailable"
            color: app.theme_cls.disabled_hint_text_color
            halign: "center"
            pos_hint: {"center_x":.5, "center_y":.4}
        CardButton:
            text: "TRY AGAIN"
            pos_hint: {"center_y": .2, "center_x": .5}
            ripple_behavior: True
            on_release:
                progress_box.opacity = 1
                non.opacity = 0
                root.get_data()