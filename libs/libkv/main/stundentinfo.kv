<StudentInfo>:
    name: "student zone"
    RelativeLayout:
        id: non
        opacity: 0
        MDIcon:
            id: ico
            icon:"newspaper"
            color: app.theme_cls.disabled_hint_text_color
            font_size: dp(70)
            pos_hint: {"center_x":.5, "center_y":.5}
            halign: "center"
        MDLabel:
            id: lbl
            text: "No News Update"
            color: app.theme_cls.disabled_hint_text_color
            halign: "center"
            pos_hint: {"center_x":.5, "center_y":.4}
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: get_color_from_hex("#EEEEEE") if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
        MD3Card:
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"
            padding: [dp(10), 0, dp(10), 0]
            md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: dp(15)
                padding: dp(10)
                MDIconButton:
                    icon: "arrow-left"
                    pos_hint: {"center_y": .5}
                    on_release: root.go_home()

                MDLabel:
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color
                    text: "Student Zone"
                    font_style: "H3"
                    size_hint_y: None
                    height: self.texture_size[1]

        RecycleView:
            id: rv
            effect_cls: ScrollEffect
            viewclass: "NewsCard"
            scroll_distance: dp(7)
            RecycleGridLayout:
                id: holder
                root: root.manager
                roots: root
                default_size_hint: 1, None
                default_size: None, Window.height/1.5
                size_hint_y: None
                height: self.minimum_height
                spacing:dp(5)
                padding: dp(5)
                cols: 1
    MDRelativeLayout:
        id: progress_box
        adaptive_height: True
        pos_hint: {"center_y": .5}
        AKSpinnerDoubleBounce:
            id: progress
            spinner_size: dp(50)
            active: True
            pos_hint: {"center_x": .5}