<Accommodation>
    name: "accommodation"
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(5)
        MDCard:
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"
            padding: [dp(10), 0, dp(10), 0]
            md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

            MDBoxLayout:
                size_hint: 1, None
                height: app.theme_cls.standard_increment

                MDLabel:
                    text: f"Accommodation[color={get_hex_from_color(app.theme_cls.primary_color)}]â€¢[/color]"
                    color: [1,1,1,1] if app.theme_cls.theme_style == "Dark" else [0,0,0,.7]
                    markup: True
                    font_style:"BigMoney"
                    bold: True
                    pos_hint:{"center_y": .5}
                MDIconButton:
                    icon: "magnify"
                    pos_hint: {"center_y": .5}
                MDIconButton:
                    icon: "handshake"
                    pos_hint: {"center_y": .5}
        PageLayout:
            id: page
            border: dp(30)
            MDCard:
                md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                radius: [dp(10), 0, 0, dp(10)]
                ScrollView:
                    id: sr1
                    do_scroll_x: True
                    effect_cls: ScrollEffect
                    MDList:
                        AccoLocation:
                            id: _1
                            text: "Nsugbe College 1st Gate"
                        AccoLocation:
                            id: _2
                            text: "Nsugbe College 2nd Gate"
                        MDRelativeLayout:
                            size_hint_y: None
                            height: root.height - sr1.height
                            MDIconButton:
                                icon: "arrow-right"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                pos_hint: {"right": 1, "center_y": .5}
                                on_release:
                                    page.page = 1

            MDCard:
                md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                radius: [dp(10), 0, 0, dp(10)]
                ScrollView:
                    id: sr2
                    do_scroll_x: True
                    effect_cls: ScrollEffect
                    MDList:
                        AccoLocation:
                            id: _1
                            text: "Nsugbe College 1st Gate"
                        AccoLocation:
                            id: _2
                            text: "Nsugbe College 2nd Gate"
                        MDRelativeLayout:
                            size_hint_y: None
                            height: root.height - sr2.height
                            MDIconButton:
                                icon: "arrow-left"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                pos_hint: {"left": 1, "center_y":.5}
                                on_release:
                                    page.page = 0
                            MDIconButton:
                                icon: "arrow-right"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                pos_hint: {"right": 1, "center_y": .5}
                                on_release:
                                    page.page = 2

            MDCard:
                md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                radius: [dp(10), 0, 0, dp(10)]
                ScrollView:
                    id: sr3
                    do_scroll_x: True
                    effect_cls: ScrollEffect
                    MDList:
                        AccoLocation:
                            id: _1
                            text: "Nsugbe College 1st Gate"
                        AccoLocation:
                            id: _2
                            text: "Nsugbe College 2nd Gate"
                        MDRelativeLayout:
                            size_hint_y: None
                            height: root.height - sr2.height
                            MDIconButton:
                                icon: "arrow-left"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                pos_hint: {"left": 1, "center_y":.5}
                                on_release:
                                    page.page = 1


