<Cart>:
    name: "cart"
    RelativeLayout:
        id: non
        opacity: 0
        MDIcon:
            id: ico
            icon:"cart-off"
            color: app.theme_cls.disabled_hint_text_color
            font_size: dp(70)
            pos_hint: {"center_x":.5, "center_y":.5}
            halign: "center"
        MDLabel:
            id: lbl
            text: "No Product Added To cart Yet"
            color: app.theme_cls.disabled_hint_text_color
            halign: "center"
            pos_hint: {"center_x":.5, "center_y":.4}
    BoxLayout:
        orientation: "vertical"
        LeftIconToolBar:
            icon: "arrow-left"
            title: "Cart"
            callback: root.go_back

        RecycleView:
            id: rv
            effect_cls: ScrollEffect
            viewclass: "CartCard"
            RecycleGridLayout:
                root: root.manager
                roots: root
                default_size_hint: 1, None
                default_size: None, Window.height/4
                size_hint_y: None
                height: self.minimum_height
                spacing:dp(10)
                padding: dp(10)
                cols: 1
        MDBoxLayout:
            adaptive_height: True
            padding: dp(7)
            MD3Card:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(30)
                radius: [dp(5)] * 4
                MDBoxLayout:
                    adaptive_height: True
                    padding: dp(20)
                    MDLabel:
                        text: "Total"
                    MDLabel:
                        id: total
                        halign: "right"
                        text: "₦0"
                        bold: True
                        markup: True
                        color: app.theme_cls.primary_color
                MDBoxLayout
                    padding: [dp(30), dp(20), dp(30), dp(20)]
                    MDLabel
                        text: "Note: Shipping Fee is non refundable in case of a return"
                        color: 0,0,0,.5
                MDBoxLayout
                    adaptive_height: True
                    padding: dp(7)
                    disabled: True if total.text == "₦0" or total.text == "₦0.0" else False
                    opacity: .5 if total.text == "₦0" or total.text == "₦0.0" else 1
                    MD3Card:
                        id: t_card
                        size_hint_y: None
                        height: self.minimum_height
                        md_bg_color: app.theme_cls.primary_color
                        radius: [dp(5)] * 4
                        on_release:
                            root.transit_to_cartcheckout()
                        MDIconButton:
                            icon: "check"
                            opacity: 1
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1
                        MDLabel:
                            halign: "center"
                            pos_hint: {"center_x": .5}
                            text: "complete your purchase"
                            font_style: "Button"
                            color: 1,1,1,1

