<Category>
    MDBoxLayout:
        md_bg_color: 1, 1, 1, 1
        orientation:"vertical"
        NoLinerToolBar:
            id: toolbar
            title: "Categories"
            icon_left: "chevron-left"
            icon_right: "magnify"
            icon_left_callback: root.go_home
            icon_right_callback:
                lambda: exec(
                """
                check_add_widget(app, "search_widget", root, "Factory.Search()", "search");
                root.manager.ids.search.p_type = True;
                root.manager.current = "search"
                """
                )

        RecycleView:
            id: rv
            do_scroll_x: False
            viewclass: "CategoryProductCard"
            effect_cls: ScrollEffect
            scroll_distance: dp(3)
            on_scroll_y:
                if self.scroll_y == -0.0 and (root.image_loaded == root.len_rv_data) and root.data: root.snack.open()
            RecycleGridLayout:
                id: holder
                root: root.manager
                roots: root
                default_size_hint: None, None
                default_size: root.width/2 - dp(10), Window.height/2.5
                size_hint_y: None
                height: self.minimum_height
                spacing:dp(10)
                padding: dp(10)
                cols: 2
                key_size: "height"

    MDRelativeLayout:
        id: progress_box
        adaptive_height: True
        pos_hint: {"center_y": .5}
        AKSpinnerDoubleBounce:
            id: progress
            spinner_size: dp(50)
            active: True
            pos_hint: {"center_x": .5}

    RelativeLayout:
        id: non
        opacity: 0
        MDIcon:
            id: ico
            icon:"package-variant-closed"
            color: app.theme_cls.disabled_hint_text_color
            font_size: dp(70)
            pos_hint: {"center_x":.5, "center_y":.5}
            halign: "center"
        MDLabel:
            id: lbl
            text: "No product for this category yet"
            color: app.theme_cls.disabled_hint_text_color
            halign: "center"
            pos_hint: {"center_x":.5, "center_y":.4}
        CardButton:
            text: "TRY AGAIN"
            pos_hint: {"center_y": .2, "center_x": .5}
            ripple_behavior: True
            on_release:
                progress_box.opacity = 1
                non.opacity = 0
                root.get_data()