<Category>
    BoxLayout:
        orientation:"vertical"
        MDBoxLayout:
            adaptive_height: True
            padding: dp(10)
            M_CardTextField:
                elevation: 10
                radius: dp(20)
                hint_text: "search"
                icon_left: "arrow-left"
                icon_right: "refresh"
                icon_right_callback: lambda x: rv.refresh_from_data()
                icon_left_callback: root.go_home
                text_field_disabled: True
                icon_right_color: app.theme_cls.primary_color
                icon_left_color: app.theme_cls.primary_color
                foreground_color: [0, 0, 0, 0.8] if app.theme_cls.theme_style == "Light" else [1,1,1,1]
                cursor_color: [0, 0, 0, .7] if app.theme_cls.theme_style == "Light" else [1,1,1,1]
                md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                disabled_foreground_color: [0.5, 0.5, 0.5, 1.0]
                on_release:
                    check_add_widget(app, "search_widget", root, Factory.Search(), "search")
                    root.manager.ids.search.p_type = True
                    root.manager.current = "search"

        RecycleView:
            id: rv
            do_scroll_x: False
            viewclass: "CategoryProductCard"
            effect_cls: ScrollEffect
#            on_scroll_start: root.schedule_load()
            RecycleGridLayout:
                id: holder
                root: root.manager
                roots: root
                default_size_hint: 1, None
                default_size: None, Window.height/2.4
                size_hint_y: None
                height: self.minimum_height
                spacing:dp(10)
                padding: dp(10)
                cols: 2
                key_size: "height"

    MDRelativeLayout:
        id: progress_box
        adaptive_height: True
        pos_hint: {"center_y": .5}
        AKSpinnerDoubleBounce:
            id: progress
            spinner_size: dp(50)
            active: True
            pos_hint: {"center_x": .5}

    RelativeLayout:
        id: non
        opacity: 0
        MDIcon:
            id: ico
            icon:"package-variant-closed"
            color: app.theme_cls.disabled_hint_text_color
            font_size: dp(70)
            pos_hint: {"center_x":.5, "center_y":.5}
            halign: "center"
        MDLabel:
            id: lbl
            text: "No product for this category yet"
            color: app.theme_cls.disabled_hint_text_color
            halign: "center"
            pos_hint: {"center_x":.5, "center_y":.4}
        CardButton:
            text: "TRY AGAIN"
            pos_hint: {"center_y": .2, "center_x": .5}
            ripple_behavior: True
            on_release:
                progress_box.opacity = 1
                non.opacity = 0
                root.get_data()