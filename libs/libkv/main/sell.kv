<Sell>:
    ScrollView:
        effect_cls: ScrollEffect
        do_scroll_x: False
        MDList:
            padding: dp(10)
            spacing: dp(20)
            MDBoxLayout:
                adaptive_height: True
                MDCard:
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(10)
                    MDLabel:
                        text: "Upload\n    Your Product\n        Information"
                        size_hint_y: None
                        height: self.texture_size[1]
                        font_style:"Money"
                        font_size: dp(18)

            MDCard:
                id: card
                orientation: "vertical"
                size_hint_y: None
                height: root.height/2.5
                radius: [dp(10)]
                ScrollView:
                    effect_cls: ScrollEffect
                    do_scroll_y: False
                    MDBoxLayout:
                        adaptive_width: True
                        padding: dp(20)
                        spacing: dp(20)
                        ProductCard:
                            size_hint_x: None
                            width: card.width/3.2
                            ripple_behavior: True
                            on_release:
                                root.open_filechooser()

                        ProductCard:
                            size_hint_x: None
                            width: card.width/3.2
                            ripple_behavior: True

                        ProductCard:
                            size_hint_x: None
                            width: card.width/3.2
                            ripple_behavior: True
                MDBoxLayout:
                    adaptive_height: True
                    padding: dp(10)
                    MDLabel:
                        text: "touch the widget above \nto select your product image"
                        size_hint_y: None
                        height: self.texture_size[1]
                        font_style: "Money"

            MDCard:
                size_hint_y: None
                height: self.minimum_height
                orientation: "vertical"
                radius: [dp(5)]
                padding: dp(20)
                spacing: dp(10)
                MDTextField:
                    hint_text: "product name:"
                    icon_right: "square-edit-outline"
                    icon_right_color: app.theme_cls.text_color
                    font_name: "assets/Eczar-Regular.ttf"

                MDTextField:
                    hint_text: "product Description:"
                    icon_right: "text-subject"
                    icon_right_color: app.theme_cls.text_color
                    font_name: "assets/Eczar-Regular.ttf"

                MDTextField:
                    hint_text: "product price:"
                    icon_right: "currency-ngn"
                    icon_right_color: app.theme_cls.text_color
                    font_name: "assets/Eczar-Regular.ttf"

                MDTextField:
                    hint_text: "current phone number:"
                    icon_right: "card-account-phone-outline"
                    icon_right_color: app.theme_cls.text_color
                    font_name: "assets/Eczar-Regular.ttf"

                MDTextField:
                    hint_text: "current email:"
                    icon_right: "email"
                    icon_right_color: app.theme_cls.text_color
                    font_name: "assets/Eczar-Regular.ttf"

                MDTextField:
                    hint_text: "product name:"
                    icon_right: "square-edit-outline"
                    icon_right_color: app.theme_cls.text_color
                    font_name: "assets/Eczar-Regular.ttf"