<Order>
    name: "order"
    RelativeLayout:
        opacity: 1 if not rv.data else 0
        MDIcon:
            icon:"package-variant-closed"
            color: app.theme_cls.disabled_hint_text_color
            font_size: dp(70)
            pos_hint: {"center_x":.5, "center_y":.5}
            halign: "center"
        MDLabel:
            text: "You have not ordered any product yet"
            color: app.theme_cls.disabled_hint_text_color
            halign: "center"
            pos_hint: {"center_x":.5, "center_y":.4}
    BoxLayout:
        orientation: "vertical"
        MDCard:
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"
            padding: [dp(10), 0, dp(10), 0]
            md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

            MDBoxLayout:
                size_hint: 1, None
                height: app.theme_cls.standard_increment
                spacing: dp(10)
                MDIconButton:
                    icon: "arrow-left"
                    pos_hint: {"center_y": .5}
                    on_release: root.go_home()

                MDLabel:
                    text: f"Order[color={get_hex_from_color(app.theme_cls.primary_color)}]â€¢[/color]"
                    color: [1,1,1,1] if app.theme_cls.theme_style == "Dark" else [0,0,0,.7]
                    markup: True
                    font_style:"BigMoney"
                    bold: True
                    pos_hint:{"center_y": .5}
                MDIconButton:
                    icon: "magnify"
                    pos_hint: {"center_y": .5}

        RecycleView:
            id: rv
            effect_cls: ScrollEffect
            viewclass: "OrderCard"
            RecycleGridLayout:
                root: root.manager
                roots: root
                default_size_hint: 1, None
                default_size: None, Window.height/4.5
                size_hint_y: None
                height: self.minimum_height
                spacing:dp(10)
                padding: dp(10)
                cols: 1