<Order>
    name: "order"
    RelativeLayout:
        opacity: 1 if not rv.data else 0
        MDIcon:
            icon:"package-variant-closed"
            color: app.theme_cls.disabled_hint_text_color
            font_size: dp(70)
            pos_hint: {"center_x":.5, "center_y":.5}
            halign: "center"
        MDLabel:
            text: "You have not ordered any product yet"
            color: app.theme_cls.disabled_hint_text_color
            halign: "center"
            pos_hint: {"center_x":.5, "center_y":.4}
    BoxLayout:
        orientation: "vertical"
        DoubleIconToolBar:
            title: "My Orders"
            icon_left: "arrow-left"
            icon_right: "magnify"
            icon_left_callback: root.go_home
            icon_right_callback: root.enter_search

        RecycleView:
            id: rv
            effect_cls: ScrollEffect
            viewclass: "OrderCard"
            RecycleGridLayout:
                root: root.manager
                roots: root
                default_size_hint: 1, None
                default_size: None, Window.height/4.5
                size_hint_y: None
                height: self.minimum_height
                spacing:dp(10)
                padding: dp(10)
                cols: 1