<Profile>
    BoxLayout:
        orientation:"vertical"
        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"
            md_bg_color: app.theme_cls.primary_color
            padding: dp(10)

            MDBoxLayout:
                size_hint: 1, None
                height: app.theme_cls.standard_increment

                MDLabel:
                    text: "Account"
                    color: 1,1,1,1
                    font_style:"H5"
                    bold: True
                MDIconButton:
                    icon: "magnify"
                    theme_text_color: "Custom"
                    text_color: 1,1,1,1
#                AKBadgeLayout:
#                    text: "0"
#                    offset: 0
#                    position: "right"
#                    badgeitem_color: 1,0,0,1
#                    bold: False
                MDIconButton:
                    icon: "cart-variant"
                    theme_text_color: "Custom"
                    text_color: 1,1,1,1

            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                MDLabel:
                    text: "Welcome User!"
                    font_style: "BigMoney"
                    size_hint_y: None
                    height: self.texture_size[1]
                    color: app.theme_cls.accent_color

                MDLabel:
                    text: "yahoome@gmail.com"
                    size_hint_y: None
                    height: self.texture_size[1]
                    color: 1,1,1,1

        ScrollView:
            effect_cls: ScrollEffect
            MDList
                spacing: dp(25)
                padding: dp(10)
                MDCard:
                    spacing: dp(26)
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: "vertical"
                    radius: [dp(10)]

                    OneLineIconListItem:
                        divider: None
                        text:"Notification"
                        text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                        theme_text_color: "Custom"
                        on_release: root.to_next("notify")
                        IconLeftWidget:
                            icon: "bell"
                            text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                            theme_text_color: "Custom"
                            on_release: root.to_next("notify")

                MDCard:
                    spacing: dp(26)
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: "vertical"
                    radius: [dp(10)]

                    OneLineIconListItem:
                        divider: None
                        text:"Customer Care"
                        text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                        theme_text_color: "Custom"
                        on_release: root.to_next("customer care")
                        IconLeftWidget:
                            icon: "headset"
                            text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                            theme_text_color: "Custom"
                            on_release: root.to_next("customer")

                    OneLineIconListItem:
                        divider: None
                        text:"Settings"
                        text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                        theme_text_color: "Custom"
                        on_release: root.to_next("setting")
                        IconLeftWidget:
                            icon: "cog"
                            text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                            theme_text_color: "Custom"
                            on_release: root.to_next("setting")

                MDCard:
                    spacing: dp(10)
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: "vertical"
                    radius: [dp(10)]

                    OneLineIconListItem:
                        divider: None
                        text:"Orders"
                        text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                        theme_text_color: "Custom"
                        on_release: root.to_next("order")
                        IconLeftWidget:
                            icon: "package-variant-closed"
                            text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                            theme_text_color: "Custom"
                            on_release: root.to_next("order")

                    OneLineIconListItem:
                        divider: None
                        text:"Pending Reviews"
                        text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                        theme_text_color: "Custom"
                        on_release: root.to_next("review")
                        IconLeftWidget:
                            icon: "comment-edit-outline"
                            text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                            theme_text_color: "Custom"
                            on_release: root.to_next("order")

                    OneLineIconListItem:
                        divider: None
                        text:"Saved Items"
                        text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                        theme_text_color: "Custom"
                        IconLeftWidget:
                            icon: "heart-outline"
                            text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                            theme_text_color: "Custom"

                    OneLineIconListItem:
                        divider: None
                        text:"Recently Viewed"
                        text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                        theme_text_color: "Custom"
                        IconLeftWidget:
                            icon: "history"
                            text_color: [0,0,0,.6] if app.theme_cls.theme_style == "Light" else app.theme_cls.text_color
                            theme_text_color: "Custom"


