<SavedProduct>:
    name: "saved items"
    RelativeLayout:
        id: non
        opacity: 0
        MDIcon:
            id: ico
            icon:"package-variant-closed"
            color: app.theme_cls.disabled_hint_text_color
            font_size: dp(70)
            pos_hint: {"center_x":.5, "center_y":.5}
            halign: "center"
        MDLabel:
            id: lbl
            text: "You have not saved any product yet"
            color: app.theme_cls.disabled_hint_text_color
            halign: "center"
            pos_hint: {"center_x":.5, "center_y":.4}
    BoxLayout:
        orientation: "vertical"
        MDCard:
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"
            padding: [dp(10), 0, dp(10), 0]
            md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

            MDBoxLayout:
                size_hint: 1, None
                height: app.theme_cls.standard_increment
                spacing: dp(10)
                MDIconButton:
                    icon: "arrow-left"
                    pos_hint: {"center_y": .5}
                    on_release: root.go_home()

                MDLabel:
                    text: f"Saved Products[color={get_hex_from_color(app.theme_cls.primary_color)}]â€¢[/color]"
                    color: [1,1,1,1] if app.theme_cls.theme_style == "Dark" else [0,0,0,.7]
                    markup: True
                    font_style:"BigMoney"
                    bold: True
                    pos_hint:{"center_y": .5}
                MDIconButton:
                    icon: "magnify"
                    pos_hint: {"center_y": .5}
                    on_release:
                        root.manager.prev_screen.append(root.name)
                        root.manager.current = "search"

        RecycleView:
            id: rv
            effect_cls: ScrollEffect
            viewclass: "CategoryProductCard"
            on_scroll_start: root.schedule_load()
            RecycleGridLayout:
                root: root.manager
                roots: root
                default_size_hint: 1, None
                default_size: None, Window.height/4.5
                size_hint_y: None
                height: self.minimum_height
                spacing:dp(10)
                padding: dp(10)
                cols: 1

    MDRelativeLayout:
        id: progress_box
        adaptive_height: True
        pos_hint: {"center_y": .5}
        AKSpinnerDoubleBounce:
            id: progress
            spinner_size: dp(50)
            active: True
            pos_hint: {"center_x": .5}