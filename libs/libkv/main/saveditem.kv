<SavedProduct>:
    name: "saved items"
    RelativeLayout:
        id: non
        opacity: 0
        MDIcon:
            id: ico
            icon:"package-variant-closed"
            color: app.theme_cls.disabled_hint_text_color
            font_size: dp(70)
            pos_hint: {"center_x":.5, "center_y":.5}
            halign: "center"
        MDLabel:
            id: lbl
            text: "You have not saved any product yet"
            color: app.theme_cls.disabled_hint_text_color
            halign: "center"
            pos_hint: {"center_x":.5, "center_y":.4}
    BoxLayout:
        orientation: "vertical"
        DoubleIconToolBar:
            title: "Saved Product"
            icon_left: "arrow-left"
            icon_right: "magnify"
            icon_left_callback: root.go_home
            icon_right_callback: root.enter_search

        RecycleView:
            id: rv
            effect_cls: ScrollEffect
            viewclass: "CategoryProductCard"
            on_scroll_start: root.schedule_load()
            RecycleGridLayout:
                root: root.manager
                roots: root
                default_size_hint: None, None
                default_size: root.width/2 - dp(10), Window.height/4.5
                size_hint_y: None
                height: self.minimum_height
                spacing:dp(10)
                padding: dp(10)
                cols: 2

    MDRelativeLayout:
        id: progress_box
        adaptive_height: True
        pos_hint: {"center_y": .5}
        AKSpinnerDoubleBounce:
            id: progress
            spinner_size: dp(50)
            active: True
            pos_hint: {"center_x": .5}