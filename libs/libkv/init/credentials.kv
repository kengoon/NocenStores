<Login>:
    name:"login"
	ScrollView:
	    effect_cls: ScrollEffect
	    MDList:
	        padding:0
	        spacing: dp(20)
	        MD3Card:
	            orientation: "vertical"
	            md_bg_color:app.theme_cls.primary_color
	            size_hint_y: None
	            height: root.height/3.5
	            radius: [0, 0, dp(70), dp(0)]
	            Image:
	                source:"assets/N1d.PNG"
	                size_hint:.9, .4
	                pos_hint:{"center_x":.55}
            GridLayout:
                padding: dp(15)
                cols: 1
                spacing: dp(40)
                size_hint_y: None
                height: self.minimum_height
                M_CardTextField:
                    id: email
                    elevation: 10
                    hint_text: "email"
                    icon_left: "account"
                    password: False
                    icon_left_color: app.theme_cls.primary_color
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")


                M_CardTextField:
                    id: password
                    elevation: 10
                    icon_left: "account-key"
                    hint_text: "password"
                    password: True
                    icon_right: "eye"
                    icon_right_callback: root.see_unset_password
                    password_mask: "•"
                    #font_size: dp(20)
                    icon_left_color: app.theme_cls.primary_color
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    CardButton:
                        text: "LOGIN"
                        pos_hint: {"center_x": .5}
                        ripple_behavior: True
                        on_release:
                            spinner.active = True
                            root.login_account()


	        MDBoxLayout:
	            orientation: "vertical"
	            adaptive_height: True
	            padding: ["20sp", "30sp", "20sp", "30sp"]
	            MDTextButton:
	                text: "click here to create an account"
	                pos_hint:{'center_x':.5}
	                font_style: "Small"
	                color: 0, .6, 0, .8
	                on_release:
	                    root.manager.on_next_screen(root.name)
                        check_add_widget(app, "signup_widget", root, "Factory.SignUp()", "signup")
	                    root.manager.current = "signup"

    MDSpinner:
        id: spinner
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: None, None
        size: "46dp", "46dp"
        active: False


<SignUp>:
    name: "signup"
    on_enter:
        name.focus = True
    canvas.before:
        Color:
            rgba: app.theme_cls.primary_color
        Rectangle:
            size: self.size
            pos: self.pos
	ScrollView:
		effect_cls:ScrollEffect
        MDList:
            padding:0
	        spacing: dp(10)
            MD3Card:
                orientation: "vertical"
                md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                size_hint_y: None
	            height: root.height/4
                radius: [0, 0, 0, dp(70)]
                Image:
                    source:"assets/N1d.PNG"
                    size_hint:.9, .4
                    pos_hint:{"center_x":.55}

            GridLayout:
                padding: dp(15)
                cols: 1
                spacing: dp(30)
                size_hint_y: None
                height: self.minimum_height
                M_CardTextField:
                    id: name
                    hint_text: "full name"
                    icon_left: "account"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint:{"center_x": .5, "center_y": 1}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                M_CardTextField:
                    id: email
                    hint_text: "email"
                    icon_left: "email"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint:{"center_x": .5, "center_y": 1}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                PhoneCardTextField:
                    id: phone
                    hint_text: "phone no"
                    icon_left: "phone"
                    input_type: "tel"
                    input_filter: 'int'
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint:{"center_x": .5, "center_y": 1}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")


                M_CardTextField:
                    id: password
                    icon_left: "account-key"
                    hint_text: "password"
                    password: True
                    icon_right_callback: root.see_unset_password
                    icon_right: "eye-off"
                    password_mask: "•"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint: {"center_x":.5, "center_y": .7}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                M_CardTextField:
                    id: confirm_password
                    icon_left: "account-key"
                    hint_text: "confirm password"
                    password: True
                    icon_right_callback: root.see_unset_password
                    icon_right: "eye-off"
                    password_mask: "•"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint: {"center_x":.5, "center_y": .7}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    CardButton:
                        text: "SIGN UP"
                        pos_hint: {"center_x": .5}
                        ripple_behavior: True
                        elevation: 10
                        on_release:
                            root.opacity = .5
                            spinner.active = True
                            root.create_account()



            MDBoxLayout:
	            orientation: "vertical"
	            adaptive_height: True
	            padding: ["20sp", "10sp", "20sp", "30sp"]
	            spacing: dp(15)
                MDTextButton:
                    text: "click here to login"
                    custom_color: 0, 0, 1, 1
                    pos_hint:{"center_x": .5}
                    font_style: "Small"
                    color: 1, 1, 1, 1
                    on_release:
                        check_add_widget(app, "login_widget", root, "Factory.Login()", "login")
                        root.manager.current = "login"
                MDTextButton:
                    text: "By clicking Sign Up, you are agree to our \nterms of use, privacy policy and terms and condition"
                    underline: True
                    color: 1, 1, 1, 1
                    on_release:
                        launch_url("https://nocenstore.pythonanywhere.com/pj_policy")


    MDSpinner:
        id: spinner
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: None, None
        size: "46dp", "46dp"
        active: False
