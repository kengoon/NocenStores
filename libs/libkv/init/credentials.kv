<SignUp>:
    name: "signup"
    on_enter:
        name.focus = True
    canvas.before:
        Color:
            rgba: app.theme_cls.primary_color
        Rectangle:
            size: self.size
            pos: self.pos
	ScrollView:
		effect_cls:ScrollEffect
        MDList:
            padding:0
	        spacing: dp(20)
            MDCard:
                orientation: "vertical"
                md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                size_hint_y: None
	            height: root.height/4
                radius: [0, 0, 0, dp(70)]
                elevation: 10
                Image:
                    source:"assets/N1d.PNG"
                    size_hint:.9, .4
                    pos_hint:{"center_x":.55}

            GridLayout:
                padding: dp(15)
                cols: 1
                spacing: dp(30)
                size_hint_y: None
                height: self.minimum_height
                M_CardTextField:
                    id: name
                    hint_text: "name"
                    icon_left: "account"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint:{"center_x": .5, "center_y": 1}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                M_CardTextField:
                    hint_text: "email"
                    icon_left: "email"
                    input_type: "email"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint:{"center_x": .5, "center_y": 1}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                M_CardTextField:
                    hint_text: "phone no"
                    icon_left: "phone"
                    input_type: "number"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint:{"center_x": .5, "center_y": 1}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")


                M_CardTextField:
                    icon_left: "account-key"
                    hint_text: "password"
                    password: True
                    icon_right: "eye"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint: {"center_x":.5, "center_y": .7}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                M_CardTextField:
                    icon_left: "account-key"
                    hint_text: "confirm password"
                    password: True
                    icon_right: "eye"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint: {"center_x":.5, "center_y": .7}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    MDCard:
                        size_hint_x: None
                        radius: [dp(5)]
                        size_hint_y: None
                        height: dp(50)
                        width: root.width/2
                        md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        pos_hint:{"center_x": .5}
                        ripple_behavior: True
                        ripple_color: app.theme_cls.primary_color
                        MDLabel:
                            text: "Sign Up"
                            halign: "center"
                            color: app.theme_cls.primary_color
                            font_style: "Money"

                MDBoxLayout:
                    adaptive_height: True
                    spacing: dp(20)
                    MDSeparator:
                        color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    Label:
                        text: "or"
                        halign:"center"
                    MDSeparator:
                        color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                MDBoxLayout:
                    adaptive_height: True
                    padding: dp(20)
                    spacing: dp(20)
                    MDCard:
                        size_hint_y: None
                        height: self.minimum_height
                        elevation: 10
                        md_bg_color: 0, 0, .6, .8
                        MDRectangleFlatIconButton:
                            line_color: self.parent.md_bg_color
                            icon: "facebook"
                            font_name: "assets/Eczar-Regular.ttf"
                            text: "Facebook Signup"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1

                    MDCard:
                        size_hint_y: None
                        height: self.minimum_height
                        elevation: 10
                        md_bg_color: .8, 0, 0, .8
                        MDRectangleFlatIconButton:
                            line_color: self.parent.md_bg_color
                            icon: "google"
                            font_name: "assets/Eczar-Regular.ttf"
                            text: "Google Signup"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1

            MDBoxLayout:
	            orientation: "vertical"
	            adaptive_height: True
	            padding: ["20sp", "10sp", "20sp", "30sp"]
                MDTextButton:
                    text: "click here to login"
                    color: 0, 0, 1, 1
                    pos_hint:{"center_x": .5}
                    font_name: "assets/Eczar-Regular.ttf"
                    on_release:
                        root.manager.current = "login"
                        print(app.theme_cls.primary_color)
