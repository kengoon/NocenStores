<Login>:
    name:"login"
    on_enter:
        email.focus = True

	ScrollView:
	    effect_cls: ScrollEffect
	    MDList:
	        padding:0
	        spacing: dp(20)
	        MDCard:
	            orientation: "vertical"
	            md_bg_color:app.theme_cls.primary_color
	            size_hint_y: None
	            height: root.height/3.5
	            radius: [0, 0, dp(70), dp(0)]
	            Image:
	                source:"assets/N1d.PNG"
	                size_hint:.9, .4
	                pos_hint:{"center_x":.55}
            GridLayout:
                padding: dp(15)
                cols: 1
                spacing: dp(40)
                size_hint_y: None
                height: self.minimum_height
                M_CardTextField:
                    id: email
                    elevation: 1
                    hint_text: "email"
                    icon_left: "account"
                    password: False
                    icon_left_color: app.theme_cls.primary_color
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")


                M_CardTextField:
                    id: password
                    elevation: 1
                    icon_left: "account-key"
                    hint_text: "password"
                    password: True
                    icon_right: "eye"
                    icon_right_callback: root.see_unset_password
                    password_mask: "•"
                    #font_size: dp(20)
                    icon_left_color: app.theme_cls.primary_color
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    MDCard:
                        size_hint_x: None
                        radius: [dp(5)]
                        size_hint_y: None
                        height: dp(50)
                        width: root.width/2
                        md_bg_color: app.theme_cls.primary_color
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        pos_hint:{"center_x": .5}
                        ripple_behavior: True
                        ripple_color: 1,1,1,1
                        on_release:
                            spinner.active = True
                            root.login_account()
                        MDLabel:
                            text: "Login"
                            halign: "center"
                            color: 1,1,1,1
                            font_style: "Money"


	        MDBoxLayout:
	            orientation: "vertical"
	            adaptive_height: True
	            padding: ["20sp", "30sp", "20sp", "30sp"]
	            MDTextButton:
	                text: "click here to create an account"
	                pos_hint:{'center_x':.5}
	                font_name: "assets/Eczar-Regular.ttf"
	                color: 0, .6, 0, .8
	                on_release:
	                    root.manager.on_next_screen(root.name)
	                    root.manager.current = "signup"

    MDSpinner:
        id: spinner
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: None, None
        size: "46dp", "46dp"
        active: False


<SignUp>:
    name: "signup"
    on_enter:
        name.focus = True
    canvas.before:
        Color:
            rgba: app.theme_cls.primary_color
        Rectangle:
            size: self.size
            pos: self.pos
	ScrollView:
		effect_cls:ScrollEffect
        MDList:
            padding:0
	        spacing: dp(10)
            MDCard:
                orientation: "vertical"
                md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                size_hint_y: None
	            height: root.height/4
                radius: [0, 0, 0, dp(70)]
                Image:
                    source:"assets/N1d.PNG"
                    size_hint:.9, .4
                    pos_hint:{"center_x":.55}

            GridLayout:
                padding: dp(15)
                cols: 1
                spacing: dp(30)
                size_hint_y: None
                height: self.minimum_height
                M_CardTextField:
                    id: name
                    hint_text: "full name"
                    icon_left: "account"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint:{"center_x": .5, "center_y": 1}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                M_CardTextField:
                    id: email
                    hint_text: "email"
                    icon_left: "email"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint:{"center_x": .5, "center_y": 1}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                PhoneCardTextField:
                    id: phone
                    hint_text: "phone no"
                    icon_left: "phone"
                    input_type: "tel"
                    input_filter: 'int'
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint:{"center_x": .5, "center_y": 1}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")


                M_CardTextField:
                    id: password
                    icon_left: "account-key"
                    hint_text: "password"
                    password: True
                    icon_right_callback: root.see_unset_password
                    icon_right: "eye-off"
                    password_mask: "•"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint: {"center_x":.5, "center_y": .7}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                M_CardTextField:
                    id: confirm_password
                    icon_left: "account-key"
                    hint_text: "confirm password"
                    password: True
                    icon_right_callback: root.see_unset_password
                    icon_right: "eye-off"
                    password_mask: "•"
                    icon_left_color: app.theme_cls.primary_color
                    pos_hint: {"center_x":.5, "center_y": .7}
                    foreground_color: app.theme_cls.text_color
                    cursor_color: app.theme_cls.text_color
                    md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                    background_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")

                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    MDCard:
                        size_hint_x: None
                        radius: [dp(5)]
                        size_hint_y: None
                        height: dp(50)
                        width: root.width/2
                        md_bg_color: [1,1,1,1] if app.theme_cls.theme_style == "Light" else get_color_from_hex("1f1f1f")
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        pos_hint:{"center_x": .5}
                        ripple_behavior: True
                        ripple_color: app.theme_cls.primary_color
                        on_release:
                            root.opacity = .5
                            spinner.active = True
                            root.create_account()
                        MDLabel:
                            text: "Sign Up"
                            halign: "center"
                            color: app.theme_cls.primary_color
                            font_style: "Money"



            MDBoxLayout:
	            orientation: "vertical"
	            adaptive_height: True
	            padding: ["20sp", "10sp", "20sp", "30sp"]
                MDTextButton:
                    text: "click here to login"
                    color: 0, 0, 1, 1
                    pos_hint:{"center_x": .5}
                    font_name: "assets/Eczar-Regular.ttf"
                    on_release:
                        root.manager.current = "login"
                        print(app.theme_cls.primary_color)

    MDSpinner:
        id: spinner
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: None, None
        size: "46dp", "46dp"
        active: False
